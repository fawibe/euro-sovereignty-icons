/* Base icon class */
.{{ prefix }} {
  display: inline-block;
  font-family: "{{ name }}";
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  vertical-align: -0.125em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Icon mappings */
{{#each codepoints}}
.{{../prefix}}-{{@key}}::before {
  content: "\\{{codepoint this}}";
}
{{/each}}
