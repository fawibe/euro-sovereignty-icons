@font-face {
  font-family: "{{ name }}";
  src: {{{ fontSrc }}};
  font-display: block; /* Ã‰vite le texte invisible pendant le chargement */
}

/* Base icon class */
.{{ prefix }} {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  vertical-align: middle;
  transform: translateY(-12%);
}

.btn .{{ prefix }} {
  transform: translateY(-15%);
}

.{{ prefix }}:before {
  font-family: "{{ name }}" !important;
  font-style: normal;
  font-weight: normal !important;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Icon mappings */
{{#each codepoints}}
.{{../prefix}}-{{@key}}:before {
  content: "\\{{codepoint this}}";
}
{{/each}}
